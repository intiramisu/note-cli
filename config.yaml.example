# note-cli 設定ファイル
#
# このファイルを ~/.config/note-cli/config.yaml にコピーして使用してください:
#   mkdir -p ~/.config/note-cli
#   cp config.yaml.example ~/.config/note-cli/config.yaml
#
# または --config オプションで任意のパスを指定できます:
#   note-cli --config /path/to/config.yaml

# ==============================================================================
# 基本設定
# ==============================================================================

# メモの保存先ディレクトリ
# デイリーノート、テンプレート、タスクファイルもこの中に保存されます
# デフォルト: ~/notes
#
# notes_dir: ~/notes

# メモの作成・編集時に使用するエディタ
# デフォルト: vim
#
# editor: vim

# 新規メモ作成時に自動で付与されるタグ
# デフォルト: [] (空)
#
# default_tags:
#   - memo

# ==============================================================================
# パス設定
# ==============================================================================
# notes_dir からの相対パス

# paths:
#   # テンプレートディレクトリ
#   # デフォルト: .templates
#   templates_dir: .templates
#
#   # タスク保存ファイル
#   # デフォルト: .tasks.yaml
#   tasks_file: .tasks.yaml
#
#   # デイリーノートディレクトリ
#   # デフォルト: daily
#   daily_dir: daily

# ==============================================================================
# 日付フォーマット
# ==============================================================================
# Go の日付フォーマット形式で指定
# 参考: https://pkg.go.dev/time#pkg-constants

# formats:
#   # 日付のみ (デイリーノート名、メモ一覧など)
#   # デフォルト: 2006-01-02
#   date: "2006-01-02"
#
#   # 日時 (メモ詳細の作成日・更新日)
#   # デフォルト: 2006-01-02 15:04
#   datetime: "2006-01-02 15:04"

# ==============================================================================
# テーマ設定
# ==============================================================================
# カラーは hex (#RRGGBB) または 256色番号 (0-255) で指定可能

# theme:
#   # カラー設定
#   colors:
#     # タイトル・見出し
#     title: "#cd7cf4"
#
#     # 選択中のアイテム
#     selected: "#d75fd7"
#
#     # 完了済みタスク
#     done: "#626262"
#
#     # ヘルプテキスト
#     help: "#626262"
#
#     # 空のセクション
#     empty: "#585858"
#
#     # 優先度: 高 (P1)
#     priority_high: "#ff0000"
#
#     # 優先度: 中 (P2)
#     priority_medium: "#ffaf00"
#
#     # 優先度: 低 (P3)
#     priority_low: "#5fafff"
#
#   # シンボル設定
#   symbols:
#     # カーソル (選択中)
#     cursor: "▸ "
#
#     # カーソル (非選択)
#     cursor_empty: "  "
#
#     # チェックボックス (未完了)
#     checkbox_empty: "[ ]"
#
#     # チェックボックス (完了)
#     checkbox_done: "[✓]"
#
#     # メモアイコン
#     note_icon: "📄"
#
#     # タスクアイコン
#     task_icon: "📋"
#
#     # デイリーノートアイコン
#     daily_icon: "📅"
#
#   # セクション名 (タスクTUI)
#   sections:
#     p1: "🔥 P1"
#     p2: "⚡ P2"
#     p3: "📝 P3"
#     done: "✅ 完了"

# ==============================================================================
# 表示設定
# ==============================================================================

# display:
#   # 区切り線の幅
#   # デフォルト: 40
#   separator_width: 40
#
#   # タスク説明の最大文字数 (TUI入力時)
#   # デフォルト: 100
#   task_char_limit: 100
#
#   # 入力フィールドの幅
#   # デフォルト: 40
#   input_width: 40
